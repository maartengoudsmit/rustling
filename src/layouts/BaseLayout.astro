---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'The Rustling of the Leaves',
  description = 'A personal blog'
} = Astro.props;

const siteTitle = 'The Rustling of the Leaves';
const fullTitle = title === siteTitle ? title : `${title} | ${siteTitle}`;


---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>üçÇ</text></svg>" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght,SOFT,WONK@9..144,100..900,50,1&display=swap&family=Poppins:wght@400;500;600&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
    <title>{fullTitle}</title>
  </head>
  <body>
    <header>
      <nav id="topNav">
        <a href="/" class="site-title">{siteTitle}</a>
        <div class="nav-links">
          <a href="/posts">Posts</a>
          <a href="/notes">Notes</a>
        </div>
      </nav>
    </header>
    <main>
      <section class="intro">
        <h1>The Rustling of the Leaves</h1>
      </section>
      <slot />
    </main>
    <footer>
      <p>&copy; {new Date().getFullYear()} {siteTitle}</p>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    /* Totoro-inspired color palette */
    --color-bg: #f5f2eb;
    --color-bg-secondary: #ebe7dc;
    --color-text: #2d3b2d;
    --color-text-secondary: #5a6b5a;
    --color-muted: #7a8b7a;
    --color-accent: #2d6a4f;
    --color-accent-hover: #1b4332;
    --color-border: #d4cfc4;
    --color-post: #5a7d5a;
    --color-note: #8b7355;
    --color-code-bg: #1e2d24;

    /* Typography */
    --font-heading: 'Fraunces', Georgia, serif;
    --font-body: 'Poppins', -apple-system, BlinkMacSystemFont, sans-serif;
    --font-mono: 'JetBrains Mono', 'SF Mono', Consolas, monospace;

    /* Type scale */
    --text-xs: 0.75rem;
    --text-sm: 0.875rem;
    --text-base: 1rem;
    --text-lg: 1.125rem;
    --text-xl: 1.25rem;
    --text-2xl: 1.5rem;
    --text-3xl: 1.875rem;
    --text-4xl: 2.375rem;

    /* Spacing & layout */
    --max-width: 640px;
    --radius-sm: 4px;
    --radius-md: 8px;
    --shadow-sm: 0 1px 3px rgba(45, 59, 45, 0.08);
    --shadow-md: 0 4px 12px rgba(45, 59, 45, 0.1);
    --transition: 0.2s ease;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: var(--font-body);
    color: var(--color-text);
    background: var(--color-bg);
    line-height: 1.6;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  ::selection {
    background: rgba(45, 106, 79, 0.2);
    color: var(--color-text);
  }

  a {
    color: var(--color-accent);
    text-decoration: none;
    transition: color var(--transition);
  }

  a:hover {
    color: var(--color-accent-hover);
  }

  a:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
    border-radius: var(--radius-sm);
  }

  header {
    border-bottom: 1px solid var(--color-border);
    padding: 1.25rem 1rem;
    background: var(--color-bg);
    position: fixed;
    width: 100vw;
    z-index: 1000;
  }

  nav {
    max-width: var(--max-width);
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .site-title {
    font-family: var(--font-heading);
    font-weight: 600;
    font-size: var(--text-lg);
    color: var(--color-text);
    opacity: 0;
    transition: opacity 200ms linear;
  }

  .site-title.visible {
    opacity: 1;
    transition: opacity 200ms linear;
  }


  .site-title:hover {
    color: var(--color-accent);
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
  }

  .nav-links a {
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text-secondary);
    transition: color var(--transition);
  }

  .nav-links a:hover {
    color: var(--color-accent);
  }

  main {
    flex: 1;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 2.5rem 1rem;
    width: 100%;
  }

  .intro {
    margin-top: 2.375rem;
    margin-bottom: 3rem;
  }

  .intro h1 {
    font-family: var(--font-heading);
    font-size: var(--text-4xl);
    font-weight: 900;
    margin-bottom: 0.5rem;
    color: var(--color-text);
  }

  .intro p {
    color: var(--color-text-secondary);
    font-size: var(--text-lg);
  }

  footer {
    position: relative;
    padding: 1.5rem 1rem;
    text-align: center;
    color: var(--color-muted);
    font-size: var(--text-sm);
    background: var(--color-bg-secondary);
  }

  footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: linear-gradient(90deg, transparent, var(--color-post), transparent);
    border-radius: 2px;
  }
</style>

<script>

  const header = document.querySelector<HTMLElement>("header");
    const navTitle = document.querySelector<HTMLAnchorElement>(".site-title");
  const options = {
    root: null,
  rootMargin: `${0 - header!.offsetHeight}px 0px 0px 0px`,
  threshold: [0, 0.25, 0.5, 0.75, 1],
};
const callback: IntersectionObserverCallback = (entries, _) => {
  entries.forEach((entry) => {
    if (!entry.isIntersecting) {
      navTitle!.classList.add("visible");
    } else {
      navTitle!.classList.remove("visible");
    }
  }

)
}
const observer = new IntersectionObserver(callback, options);
const target = document.querySelector<HTMLHeadingElement>(".intro h1");
observer.observe(target!);
</script>