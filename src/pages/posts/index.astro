---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const posts = (await getCollection('posts', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const formatDate = (date: Date) => date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<BaseLayout title="Posts" description="All blog posts">
  <h1>Posts</h1>
  <p class="subtitle">Longer writings and essays</p>

  {posts.length === 0 ? (
    <p class="empty">No posts yet.</p>
  ) : (
    <ul class="posts-list">
      {posts.map((post) => (
        <li>
          <a href={`/posts/${post.id}`}>
            <span class="title">{post.data.title}</span>
            <span class="description">{post.data.description}</span>
          </a>
          <time datetime={post.data.pubDate.toISOString()}>
            {formatDate(post.data.pubDate)}
          </time>
        </li>
      ))}
    </ul>
  )}
</BaseLayout>

<style>
  h1 {
    font-family: var(--font-heading);
    font-size: var(--text-3xl);
    font-weight: 600;
    margin-bottom: 0.25rem;
    color: var(--color-text);
  }

  .subtitle {
    color: var(--color-text-secondary);
    margin-bottom: 2.5rem;
    font-size: var(--text-lg);
  }

  .empty {
    color: var(--color-muted);
    font-style: italic;
  }

  .posts-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .posts-list li {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    padding: 1rem 1.25rem;
    border-left: 3px solid var(--color-post);
    transition: background var(--transition);
  }

  .posts-list li:hover {
    background: rgba(90, 125, 90, 0.04);
  }

  .posts-list a {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .title {
    font-family: var(--font-heading);
    font-weight: 500;
    font-size: var(--text-xl);
    color: var(--color-text);
    transition: color var(--transition);
  }

  .posts-list a:hover .title {
    color: var(--color-accent);
  }

  .description {
    color: var(--color-text-secondary);
    font-size: var(--text-base);
    line-height: 1.5;
  }

  time {
    font-size: var(--text-sm);
    color: var(--color-muted);
    margin-top: 0.25rem;
  }
</style>
